#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(void)
{
	//1.랜덤 7개수 1~45, 중복되지 않게
	srand(time(NULL)); //rand seed값 설정
	int lotto[7] = { 0, };
	int reallotto[6] = { 0, };
	int bonus = 0;
	int N;
	int cnt = 0;
	//7번 반복
	for (int i = 0; i < 7; i++) {
		cnt = 0;
		N = rand() % 45 + 1;
       //중복값 조사를 위해 2번째 for 샐정
		for (int j = 0; j <= i; j++) {
         		
			if (lotto[j] == N) {
				cnt++;
				break;
			}
		}
		if (cnt == 0) {
			lotto[i] = N;
		}
		else {
			i--;
			continue;
		}
	}
	//출력
	for (int i = 0; i < 7; i++)
		printf("%4d", lotto[i]);

	return 0;
}
